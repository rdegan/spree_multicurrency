<%= form_tag :update_currency, :id => 'multicurrency' do %>
    <% current_value = session[:current_currency].nil? ? Spree::Config[:main_currency] : session[:current_currency] %>
    <%= select_tag :current_currency, options_from_collection_for_select(SpreeCurrency.order('iso'), :iso, :iso, current_value),
                   :class => 'multicurrency_select' %>
<% end %>